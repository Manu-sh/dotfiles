set use_from = yes
set envelope_from = yes
set realname = "ILTUO NOME" #NOME
set imap_user = TUAMAIL@yahoo.com #ANCHE SE AVETE UN INDI... IT
set imap_pass = YOURPASSWORD
set spoolfile = imaps://TUAMAIL@yahoo.com@imap.mail.yahoo.com #ANCHE SE AVETE UN INDIZZO CON DOMINIO .IT
set smtp_url = smtps://TUAMAIL@yahoo.com@smtp.mail.yahoo.com:465 #ANCHE SE AVETE UN INDIRIZZO CON DOMINIO IT

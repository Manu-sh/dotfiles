[colors]
background     = #262626
foreground     = #C5C8C6
background-alt = #444
foreground-alt = #555

[module/date]
type			 = internal/date
interval		 = 5
date			 = %c
format-prefix-foreground = ${colors.foreground-alt}
label			 = %date% %time%


[module/cpu]
type			    = internal/cpu
interval		    = 1
format-prefix		    = "CPU "
label			    = %percentage:2%%
format                      = <label> <bar-load>
bar-load-foreground-0       = #55aa55
bar-load-foreground-1       = #55aa55
bar-load-foreground-2       = #55aa55
bar-load-foreground-3       = #55aa55
bar-load-foreground-4       = #55aa55
bar-load-foreground-5       = #f5a70a
bar-load-foreground-6	    = #ff5555
bar-load-gradient	    = false
bar-load-width              = 10
bar-load-indicator	    = 
bar-load-fill		    = ▓
bar-load-empty	            = ░
bar-load-indicator-font     = 2
bar-load-fill-font	    = 2
bar-load-empty-font	    = 2
bar-load-empty-foreground = ${colors.foreground-alt}

;[module/cpu]
;type			 = internal/cpu
;interval		 = 1
;format-prefix		 = "CPU "
;format                   = <label> <ramp-coreload>
;label			 = %percentage:2%%
;ramp-coreload-0		 = ▁
;ramp-coreload-1		 = ▂
;ramp-coreload-2		 = ▃
;ramp-coreload-3		 = ▄
;ramp-coreload-4		 = ▅
;ramp-coreload-5		 = ▆
;ramp-coreload-6		 = ▇
;ramp-coreload-7		 = █

[module/battery]
type			     = internal/battery
battery		             = BAT0
adapter			     = AC
full-at                      = 98
poll-interval		     = 5
format-charging		     = <animation-charging>
animation-charging-0	     = 
animation-charging-1	     = 
animation-charging-2	     = 
animation-charging-3	     = 
animation-charging-4	     = 
animation-charging-framerate = 750


[module/volume]
type			    = internal/volume
format-volume-prefix	    = "VOL "
format-volume		    = <label-volume> <bar-volume>
label-volume		    = %percentage%%
label-volume-foreground     = ${root.foreground}
format-muted-prefix	    = " "
format-muted-foreground	    = ${colors.foreground-alt}
label-muted		    = mute
bar-volume-foreground-0     = #55aa55
bar-volume-foreground-1     = #55aa55
bar-volume-foreground-2     = #55aa55
bar-volume-foreground-3     = #55aa55
bar-volume-foreground-4     = #55aa55
bar-volume-foreground-5     = #f5a70a
bar-volume-foreground-6	    = #ff5555
bar-volume-gradient	    = false
bar-volume-width            = 10
bar-volume-indicator	    = 
bar-volume-fill		    = |
bar-volume-empty	    = |
bar-volume-indicator-font   = 2
bar-volume-fill-font	    = 2
bar-volume-empty-font	    = 2
bar-volume-empty-foreground = ${colors.foreground-alt}


[module/my-weather]
type          = custom/script
tail          = true
interval      = 30
format-prefix = "WEATHER "
exec          = ~/dotfiles/CfgRoot/i3/conky_scripts/external_scripts/IconicWeather.sh florence


[module/my-network]
type          = custom/script
tail          = true
interval      = 1
format-prefix = "AP "
exec          = ~/dotfiles/CfgRoot/i3/conky_scripts/netinfo.sh polybar


[module/my-kernel]
type          = custom/script
interval      = 100
format-prefix = "KERNEL "
exec          = uname -r


[module/my-cpu]
type          = custom/script
interval      = 100
format-prefix = "PROC "
exec          = grep -wm 1 'model name[[:space:]]:' /proc/cpuinfo|sed s/^model\ name[[:space:]]:[[:space:]]//g


[module/my-cpu-core]
type          = custom/script
interval      = 100
format-prefix = "CORE "
exec          = nproc --all


[module/filesystem]
type          = internal/fs
mount-0       = /
interval      = 10
label-mounted = FS %mountpoint% %free% (%fsname%)


[module/memory]
type     = internal/memory
label    = RAM [ %gb_used%/%gb_free% ]
interval = 1


[module/mpd]
type                = internal/mpd
format-online       = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>
icon-prev	    = 
icon-stop	    = 
icon-play           = 
icon-pause          = 
icon-next           = 
label-song-maxlen   = 25
label-song-ellipsis = true
interval            = 1

[bar/topbar]
;monitor	    = ${env:MONITOR:HDMI-0}
locale              = it_IT.UTF-8
width		    = 100%
height		    = 20
fixed-center	    = false
background	    = ${colors.background}
foreground	    = ${colors.foreground}
line-size	    = 3
line-color	    = #f00
padding-right	    = 2
module-margin-left  =
module-margin-right = 2
font-0		    = IBM 3270 Narrow:size=11:antialias=true
padding-left        = 2
modules-left        = date cpu my-weather battery volume my-network my-kernel my-cpu my-cpu-core filesystem memory
modules-center      = mpd
modules-right       = 
tray-position       = right
tray-padding        = 2
tray-transparent    = true
tray-background     = #0063ff
cursor-click        = pointer
cursor-scroll       = ns-resize

[settings]
screenchange-reload = true

[global/wm]
margin-top	    = 5
margin-bottom	    = 5
